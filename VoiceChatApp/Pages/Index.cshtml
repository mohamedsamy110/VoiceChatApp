
@page
@model IndexModel
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <title>Voice Chat App - عيد سعيد 🎊</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            background: linear-gradient(120deg, #87CEEB, #ADD8E6);
            color: white;
            padding: 20px;
        }

        .top-bar {
            background-color: #1E3A5F;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

            .top-bar h1 {
                color: white;
                font-size: 24px;
                margin: 0;
            }

        h1 {
            font-size: 40px;
            margin-bottom: 10px;
        }

        h2 {
            font-size: 30px;
            margin-bottom: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.2);
            padding: 20px;
            border-radius: 10px;
            display: inline-block;
            width: 60%;
        }

        #users {
            margin-top: 20px;
        }

        .user {
            margin: 10px;
            padding: 10px;
            border-radius: 8px;
            background: white;
            color: black;
            font-size: 18px;
            font-weight: bold;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        }

        input {
            padding: 10px;
            border-radius: 5px;
            border: none;
            margin: 10px;
            font-size: 18px;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            background-color: #1E90FF;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

            button:hover {
                background-color: #4682B4;
            }
    </style>
</head>
<body>

    <div class="top-bar">
        <h1>VoiceChatApp</h1>
    </div>

    <h1>🎉 كل عام وأنتم بخير! 🎊</h1>
    <h2>Voice Chat - استمتع بالمحادثة الصوتية في العيد 🥳</h2>

    <div class="container">
        <input type="text" id="username" placeholder="اكتب اسمك هنا 🎤" />
        <button onclick="joinChat()">انضم الآن</button>

        <div id="users"></div>
    </div>

    <audio id="remoteAudio" autoplay></audio>

    <script src="/js/chat.js"></script>

</body>
</html>

